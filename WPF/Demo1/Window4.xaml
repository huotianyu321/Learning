                    <Image Source="pack://application:,,,/Images/logo.png" Width="100" Height="100"/>
                </Border>
            </StackPanel>
        </Canvas>
        <!--<Slider Grid.Row="1" Maximum="{Binding Maximum}" Value="{Binding X}"/>-->
